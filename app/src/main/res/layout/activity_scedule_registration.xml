<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/scedule_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:menu="@menu/menu_scedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_time"
        android:layout_width="206dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/time_image_btn"
        app:layout_constraintTop_toBottomOf="@+id/editText_calendar" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_calendar"
        android:layout_width="206dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/calendar_image_btn"
        app:layout_constraintTop_toBottomOf="@+id/editText_location" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_location"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="location"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_studyName" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_studyName"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="스터디명을 입력 하세요"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/map_image_btn"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/editText_location"
        app:layout_constraintTop_toBottomOf="@+id/editText_studyName"
        app:srcCompat="@drawable/map_maker" />

    <ImageButton
        android:id="@+id/calendar_image_btn"
        android:layout_width="76dp"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_location"
        app:srcCompat="@drawable/calendar_image" />

    <ImageButton
        android:id="@+id/time_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_image_btn"
        app:srcCompat="@drawable/time_image" />

    <TimePicker
        android:id="@+id/scedule_timepicker"
        android:layout_width="261dp"
        android:layout_height="151dp"
        android:layout_marginTop="30dp"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="@+id/editText_time"
        app:layout_constraintStart_toStartOf="@+id/time_image_btn"
        app:layout_constraintTop_toBottomOf="@+id/editText_time"></TimePicker>

</androidx.constraintlayout.widget.ConstraintLayout>